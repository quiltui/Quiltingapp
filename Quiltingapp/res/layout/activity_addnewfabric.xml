<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">


<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:id="@+id/linear_1_add"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/imageView1_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/addimage" />

        <Button
            android:id="@+id/button2_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="BROWSE FOR IMAGE" 
            android:onClick="loadImagefromGallery"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView01_name"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="NAME:  "
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=""
            android:editable="true" 
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            >
         <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView01_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PRIMARY COLOR:  "
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=" "
            android:editable="true" 
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            >
         <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView1_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SECONDARY COLORS:  "
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=" "
            android:editable="true" 
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            >
         <requestFocus />
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView03_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="STYLE:  "
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:editable="true" 
            android:inputType="none"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceMedium"
             >
          <requestFocus />
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView06_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:text="PRICE/YARD:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText4_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=""
            android:editable="true" 
			android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"            
             >
          <requestFocus />
        </EditText>
    </LinearLayout>
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView07_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="STORE NAME:  "
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText5_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=""
            android:editable="true" 
			android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            >
          <requestFocus />
        </EditText>
    </LinearLayout>
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView10_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="QUANTITY:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText6_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:text=""
            android:editable="true"
            android:ems="10"
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F8E0F7" >

        <TextView
            android:id="@+id/TextView11_add"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="NOTES:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText7_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.34"
            android:text=" "
            android:editable="true" 
  			android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
             >
        <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5A9A9" >
    </LinearLayout>
  <Button
        android:id="@+id/button1_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE" />
  
</LinearLayout>
</ScrollView>
  

   

